@model WebRPGCreation.Models.Grupo

@{
    ViewData["Title"] = "Detalhes do Grupo";
}
<br />
<h1><b>DETALHES</b></h1>
<p></p>
<div>
    <h4><b>Grupo</b></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <b>Nome</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            <b>Descrição</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            <b>Início</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt class="col-sm-2">
            <b>Fim</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataFim)
        </dd>
    </dl>
</div>
<div>
    <a type="button" class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> &nbsp;
    <a type="button" class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>
