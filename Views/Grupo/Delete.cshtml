@model WebRPGCreation.Models.Grupo

@{
    ViewData["Title"] = "Deletar Grupo";
}
<br />
<h1><b>DELETAR</b></h1>
<p></p>
<h3><b>Tem certeza que deseja deletar isto?</b></h3>
<p></p>
<div>
    <h4><b>Grupo</b></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <b>Nome</b>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            <b>Descrição</b>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            <b>Início</b>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt class = "col-sm-2">
            <b>Fim</b>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFim)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> &nbsp;
        <a type="button" class="btn btn-secondary" asp-action="Index">Voltar</a>
    </form>
</div>
