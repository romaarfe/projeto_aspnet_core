<div>
    <h4><b>Personagem</b></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <b>Nome</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            <b>Descrição</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            <b>Nível</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nivel)
        </dd>
        <dt class="col-sm-2">
            <b>XP</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.XP)
        </dd>
        <dt class="col-sm-2">
            <b>Poder Atual</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PoderAtual)
        </dd>
        <dt class="col-sm-2">
            <b>Poder Máximo</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PoderMaximo)
