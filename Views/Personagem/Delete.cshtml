        </dd>
        <dt class="col-sm-2">
            <b>Agir Máximo</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AgirMaximo)
        </dd>
        <dt class="col-sm-2">
            <b>Mente Atual</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MenteAtual)
        </dd>
        <dt class="col-sm-2">
            <b>Mente Máximo</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MenteMaximo)
        </dd>
        <dt class="col-sm-2">
            <b>HP Atual</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HpAtual)
