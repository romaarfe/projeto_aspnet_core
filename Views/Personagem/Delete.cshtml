            <b>Grupo</b>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grupo.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> &nbsp;
        <a type="button" class="btn btn-secondary" asp-action="Index">Voltar</a>
    </form>
</div>
