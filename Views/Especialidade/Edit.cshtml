@model WebRPGCreation.Models.Especialidade

@{
    ViewData["Title"] = "Editar Especialidade";
}
<br />
<h1><b>EDITAR</b></h1>
<b></b>
<h4><b>Especialidade</b></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"><b>Nome</b></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"><b>Descrição</b></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="PersonagemId" class="control-label"><b>Personagem</b></label>
                <select asp-for="PersonagemId" class="form-control" asp-items="ViewBag.PersonagemId"></select>
                <span asp-validation-for="PersonagemId" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" /> &nbsp;
                <a type="button" class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
