@model IEnumerable<WebRPGCreation.Models.Especialidade>

@{
    ViewData["Title"] = "Especialidades";
}
<br />
<h1><b>ESPECIALIDADES</b><img width="15%" align="right" src="~/Attack03.jpg" /></h1>
<p></p>
<p>
    <a type="button" class="btn btn-primary" asp-action="Create">Nova Especialidade</a>
</p>
<br />
<table class="table table-hover table-group-divider table-striped">
    <thead>
        <tr class="table-dark">
            <th>
                <b>NOME</b>
            </th>
            <th>
                <b>DESCRIÇÃO</b>
            </th>
            <th>
                <b>PERSONAGEM</b>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-active">
                <td>
                    <b>@Html.DisplayFor(modelItem => item.Nome)</b>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Personagem.Nome)
                </td>
                <td>
                    <a type="button" class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a> &nbsp;
                    <a type="button" class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> &nbsp;
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
