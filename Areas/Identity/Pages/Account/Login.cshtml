@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br />
<h1><b>LOGIN</b></h1>
<p></p>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2><b>Utilize sua conta de GM ou Jogador!</b></h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" data-val-email="O campo Email não é uma endereço válido." data-val-required="O campo Email é necessário." aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"><b>Email</b></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <p></p>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" data-val-required="A Senha é um campo necessário." aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"><b>Senha</b></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <P></P>
                <div>
                    <div class="form-check form-switch">
                        <label asp-for="Input.RememberMe" class="form-check-label"><b>Lembrar-me</b></label>
                        <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox">
                    </div>
                </div>
                <p></p>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p></p>

                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword"><b>Esqueceu sua senha?</b></a>
                    </p>
                    <p></p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><b>Registar como novo Jogador</b></a>
                    </p>
                    <p></p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"><b>Reenviar email de confirmação</b></a>
                    </p>
                </div>
            </form>
        </section>
    </div>

